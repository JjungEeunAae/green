package ex03;

public class Ex05 {
	public static void main(String[] args) {
		System.out.println(solution(64,6));
		
	}
	
	public static int solution(int n, int k) {
        int result = 0;
        // 정수일 때 n/10(몫)과 k이 동일한지
        // 실수일 때 n%10(나머지)과 0이 동일한지
        if((n / 10) == k && n % 10 == 0) {
        	result = n * 12000;
        } else {
        	result = (n * 12000) + ((k - (n / 10)) * 2000);
        };
        return result;
    }
}
